# Force LF for all code/text files
*.py     text eol=lf
*.sh     text eol=lf
*.md     text eol=lf
*.java   text eol=lf
*.scala  text eol=lf
*.sql    text eol=lf

# Treat Jupyter notebooks as binary
*.ipynb  -text

# VSCode & config stuff — always LF
*.json   text eol=lf
*.yaml   text eol=lf
*.yml    text eol=lf
*.xml    text eol=lf
*.ini    text eol=lf
*.cfg    text eol=lf
*.toml   text eol=lf
*.editorconfig text eol=lf
*.gitattributes text eol=lf
*.gitignore text eol=lf
.vscode/* text eol=lf
.settings/* text eol=lf
*.code-workspace text eol=lf
# Images and binaries — always binary
*.png    -text
*.jpg    -text
*.jpeg   -text
*.gif    -text
*.bmp    -text
*.tiff   -text
*.ico    -text
*.pdf    -text
*.zip    -text
*.tar    -text
*.gz     -text
